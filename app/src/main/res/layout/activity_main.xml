<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#303f9f"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.android.calculator.MainActivity"
    android:orientation="vertical">


    <EditText
        android:textColor="#e3f2fd"
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="45sp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="40dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:textSize="20sp"
            android:id="@+id/btn1"
            android:onClick="clickedbtn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/btn2"
            android:onClick="clickedbtn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"/>

        <Button
            android:textSize="20sp"
            android:id="@+id/btn3"
            android:onClick="clickedbtn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/add"
            android:onClick="clickedbtnadd"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:textSize="20sp"
            android:id="@+id/btn4"
            android:onClick="clickedbtn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/btn5"
            android:onClick="clickedbtn5"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/btn6"
            android:onClick="clickedbtn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/subtract"
            android:onClick="clickedbtnsub"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"/></LinearLayout>

    <LinearLayout        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:textSize="20sp"
            android:id="@+id/btn7"
            android:onClick="clickedbtn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/btn8"
            android:onClick="clickedbtn8"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/btn9"
            android:onClick="clickedbtn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/multiply"
            android:onClick="clickedbtnmul"
            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*"/>
    </LinearLayout>
    <LinearLayout        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:textSize="20sp"
            android:id="@+id/dot"
            android:onClick="clickedbtndot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>
        <Button
            android:textSize="20sp"
            android:id="@+id/btn0"
            android:onClick="clickedbtn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/btnC"
            android:onClick="clickedbtnC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"/>
        <Button
            android:textSize="20sp"
            android:id="@+id/divide"
            android:onClick="clickedbtndivide"

            android:layout_marginLeft="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"/>
    </LinearLayout>
    <Button

        android:id="@+id/answer"
        android:onClick="clickedbtnequal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="25sp"
        android:layout_marginTop="30sp"/>

</LinearLayout>

